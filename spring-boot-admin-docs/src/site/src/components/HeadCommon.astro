---
import '../styles/theme.css';
import '../styles/index.css';
---
<meta charset="utf-8" />
<meta name="viewport" content="width=device-width" />
<meta name="generator" content={Astro.generator} />

<link rel="icon" type="image/svg+xml" href={`${Astro.site.pathname}/favicon.svg`} />

<link rel="sitemap" href={`${Astro.site.pathname}/sitemap.xml`} />

<link rel="stylesheet" href={`${Astro.site.pathname}/highlight.css`} is:inline >
<script src={`${Astro.site.pathname}/highlight.js`} is:inline></script>

<!-- Preload Fonts -->
<link rel="preconnect" href="https://fonts.googleapis.com" />
<link
	href="https://fonts.googleapis.com/css2?family=IBM+Plex+Mono:ital@0;1&display=swap"
	rel="stylesheet"
/>

<!-- Scrollable a11y code helper -->
<script src={`${Astro.site.pathname}/make-scrollable-code-focusable.js`} is:inline></script>

<!-- This is intentionally inlined to avoid FOUC -->
<script is:inline>
	const root = document.documentElement;
	const theme = localStorage.getItem('theme');
	if (theme === 'dark' || (!theme && window.matchMedia('(prefers-color-scheme: dark)').matches)) {
		root.classList.add('theme-dark');
	} else {
		root.classList.remove('theme-dark');
	}
</script>

